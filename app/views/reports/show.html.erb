<h1>
  <%= @report.title %>
</h1>
<p>
  <%= @report.owner.email %>
</p>
<p>
  <% @report.pictures.each do |picture| %>
    <%= image_tag picture.file.url(:medium) %>
  <% end %>
</p>
<p>
  <%= @report.body.html_safe %>
</p>

<%= link_to 'Edit', edit_report_path(@report), class: 'btn btn-link' if can? :edit, @report %> |
<%= link_to 'Back', reports_path, class: 'btn btn-link' %>
